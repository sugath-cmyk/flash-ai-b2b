{
  "name": "backend",
  "version": "1.0.1",
  "description": "Flash AI B2B Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "build": "tsc && npm run copy-public && npm run copy-widget",
    "copy-public": "mkdir -p dist/public && cp -r src/public/* dist/public/",
    "copy-widget": "mkdir -p dist/widget && cp -r src/widget/* dist/widget/",
    "start": "node dist/index.js",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:specific": "node run-migration.js",
    "migrate:widget": "node run-migration.js 012",
    "seed": "ts-node src/scripts/migrate.ts seed",
    "sync-shopify": "ts-node src/scripts/update-shopify-credentials.ts",
    "sync-production": "ts-node src/scripts/sync-production-store.ts",
    "check-products": "ts-node src/scripts/check-products.ts",
    "analyze-products": "ts-node src/scripts/analyze-products.ts",
    "lint": "echo \"Linting not configured yet\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ai",
    "b2b",
    "enterprise"
  ],
  "author": "Flash AI Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "bull": "^4.16.5",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "form-data": "^4.0.0",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "image-size": "^2.0.2",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "openai": "^6.15.0",
    "pdf-parse": "^2.4.5",
    "pg": "^8.16.3",
    "puppeteer": "^24.34.0",
    "redis": "^5.10.0",
    "sharp": "^0.34.5",
    "shopify-api-node": "^3.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
